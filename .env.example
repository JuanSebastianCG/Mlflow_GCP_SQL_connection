# MLflow Server Configuration
MLFLOW_TRACKING_PORT=5001
MLFLOW_HOST=0.0.0.0

# PostgreSQL Backend Store
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mlflow
POSTGRES_USER=neondb_owner
POSTGRES_PASSWORD=mlflow_password
MLFLOW_POSTGRES_CONNECTION_STRING=postgresql://

# Google Cloud Storage Configuration
MLFLOW_BUCKET_LOCATION=gs://bucket-mlflow-artifacts
MLFLOW_FOLDER_LOCATION=mlflow-artifacts-v1

# GCP Configuration
GCP_PROJECT=tu-proyecto-gcp
GOOGLE_APPLICATION_CREDENTIALS=%APPDATA%\gcloud\application_default_credentials.json
USE_GCP_INTERACTIVE_AUTH=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Environment Configuration
ENVIRONMENT=production

# MLflow GC (Limpieza periódica) - Opcional
# Habilita/deshabilita el GC en segundo plano
MLFLOW_GC_ENABLED=true
# Frecuencia de ejecución del GC en segundos
MLFLOW_GC_INTERVAL_SECONDS=20
# Elimina runs/artefactos más antiguos que este período (ej: 5m, 2h, 7d)
MLFLOW_GC_OLDER_THAN=5m